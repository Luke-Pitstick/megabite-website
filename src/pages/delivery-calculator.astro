---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Delivery Fee Calculator | Stop Paying 30% Commissions" 
  description="Calculate how much you're losing to third-party delivery apps and discover your savings with first-party online ordering."
>
  <section class="py-12 sm:py-20 bg-gradient-to-br from-primary-50 via-white to-primary-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 overflow-x-hidden">
      <div class="text-center mb-8 sm:mb-12 scroll-animate">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 animate-scale">
          <span class="bg-gradient-to-r from-primary-600 to-primary-500 bg-clip-text text-transparent">
            Third-Party Delivery Calculator
          </span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 animate-fade-in delay-200">
          See how much DoorDash, Uber Eats & Grubhub are really costing you
        </p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-4 sm:p-8 card-entrance">
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-r">
          <p class="text-red-900 font-semibold">ðŸ’¸ The Real Cost:</p>
          <p class="text-red-800 text-sm mt-1">Third-party apps charge 15-30% commission + marketing fees + customer acquisition costs. Most restaurants lose money on every delivery order.</p>
        </div>

        <form id="delivery-calculator" class="space-y-6">
          <!-- Monthly Delivery Sales -->
          <div class="scroll-animate">
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              Monthly Delivery/Takeout Sales
            </label>
            <div class="relative">
              <span class="absolute left-4 top-3 text-gray-500">$</span>
              <input 
                type="number" 
                id="delivery-sales"
                placeholder="15000"
                class="w-full pl-8 pr-4 py-3 rounded-lg border-2 border-gray-200 focus:border-primary-500 focus:outline-none text-lg"
                required
              />
            </div>
            <p class="mt-2 text-sm text-gray-500">Include all DoorDash, Uber Eats, Grubhub, etc.</p>
          </div>

          <!-- Average Commission -->
          <div class="scroll-animate">
            <label class="block text-sm font-semibold text-gray-700 mb-3">
              Average Commission Rate
            </label>
            <input 
              type="range" 
              id="commission-rate"
              min="15"
              max="30"
              value="25"
              step="1"
              class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-primary-500"
            />
            <div class="flex justify-between text-sm text-gray-600 mt-2">
              <span>15%</span>
              <span id="commission-display" class="font-bold text-red-600">25%</span>
              <span>30%</span>
            </div>
          </div>

          <!-- Platform Mix -->
          <div class="scroll-animate">
            <label class="block text-sm font-semibold text-gray-700 mb-3">
              Which platforms do you use?
            </label>
            <div class="space-y-2">
              <label class="flex items-center justify-between p-3 border-2 border-gray-200 rounded-lg">
                <span class="flex items-center">
                  <input type="checkbox" name="platform" value="doordash" class="mr-3 accent-primary-500" checked />
                  <span>DoorDash (25-30%)</span>
                </span>
              </label>
              <label class="flex items-center justify-between p-3 border-2 border-gray-200 rounded-lg">
                <span class="flex items-center">
                  <input type="checkbox" name="platform" value="ubereats" class="mr-3 accent-primary-500" checked />
                  <span>Uber Eats (25-30%)</span>
                </span>
              </label>
              <label class="flex items-center justify-between p-3 border-2 border-gray-200 rounded-lg">
                <span class="flex items-center">
                  <input type="checkbox" name="platform" value="grubhub" class="mr-3 accent-primary-500" checked />
                  <span>Grubhub (20-25%)</span>
                </span>
              </label>
            </div>
          </div>

          <!-- Average Order Value -->
          <div class="scroll-animate">
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              Average Delivery Order Value
            </label>
            <div class="relative">
              <span class="absolute left-4 top-3 text-gray-500">$</span>
              <input 
                type="number" 
                id="avg-order"
                placeholder="35"
                class="w-full pl-8 pr-4 py-3 rounded-lg border-2 border-gray-200 focus:border-primary-500 focus:outline-none text-lg"
                required
              />
            </div>
          </div>

          <!-- Calculate Button -->
          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-primary-500 to-primary-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:shadow-xl transition-all duration-300 hover:scale-105 btn-shimmer"
          >
            Calculate Your Losses
          </button>
        </form>

        <!-- Results Section -->
        <div id="results" class="hidden mt-8 space-y-6">
          <div class="border-t-2 border-gray-200 pt-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Your Delivery Cost Analysis</h3>
            
            <!-- Monthly & Annual Fees -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6 mb-6">
              <div class="bg-gradient-to-br from-red-50 to-white p-4 md:p-6 rounded-xl border border-red-100 text-center">
                <p class="text-xs md:text-sm font-semibold text-red-600 mb-2">MONTHLY FEES TO APPS</p>
                <p class="text-2xl md:text-4xl font-bold text-red-700 break-words" id="monthly-fees">$0</p>
              </div>
              <div class="bg-gradient-to-br from-accent-financial-50 to-white p-4 md:p-6 rounded-xl border border-accent-financial-100 text-center">
                <p class="text-xs md:text-sm font-semibold text-accent-financial-600 mb-2">ANNUAL FEES TO APPS</p>
                <p class="text-2xl md:text-4xl font-bold text-accent-financial-700 break-words" id="annual-fees">$0</p>
              </div>
            </div>

            <!-- Comparison -->
            <div class="bg-gradient-to-br from-secondary-50 to-white p-6 rounded-xl border-2 border-secondary-200 mb-6">
              <h4 class="text-lg font-bold text-secondary-900 mb-4">First-Party vs Third-Party</h4>
              <div class="space-y-4">
                <div class="flex justify-between items-center">
                  <span class="text-gray-700">Third-Party Apps (25% avg)</span>
                  <span class="text-red-700 font-bold" id="third-party-cost">$0/order</span>
                </div>
                <div class="flex justify-between items-center border-t-2 border-gray-200 pt-4">
                  <span class="text-gray-700">First-Party Ordering (3% processing)</span>
                  <span class="text-primary-700 font-bold" id="first-party-cost">$0/order</span>
                </div>
                <div class="flex justify-between items-center border-t-2 border-primary-200 pt-4 bg-primary-50 -mx-6 px-6 py-4 rounded">
                  <span class="text-gray-900 font-bold">Savings Per Order</span>
                  <span class="text-primary-700 font-bold text-xl" id="savings-per-order">$0</span>
                </div>
              </div>
            </div>

            <!-- Annual Savings Projection -->
            <div class="bg-gradient-to-r from-primary-500 to-primary-600 p-4 md:p-6 rounded-xl text-white text-center">
              <p class="text-xs md:text-sm opacity-90 mb-2">YOUR POTENTIAL ANNUAL SAVINGS</p>
              <p class="text-3xl md:text-5xl font-bold mb-4 break-words" id="annual-savings">$0</p>
              <p class="text-xs md:text-sm opacity-90">By switching to first-party online ordering</p>
            </div>
          </div>
        </div>

        <!-- Benefits Section Below -->
        <div id="delivery-benefits-section" class="hidden mt-8">
          <div class="bg-white p-6 rounded-xl border border-primary-100 shadow-lg">
            <h4 class="text-xl font-bold text-gray-900 mb-4">What You Get with First-Party Ordering:</h4>
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="flex items-start p-4 bg-primary-50 rounded-lg">
                <svg class="w-6 h-6 text-primary-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700"><strong>You own the customer data</strong> - build loyalty, send promotions</span>
              </div>
              <div class="flex items-start p-4 bg-primary-50 rounded-lg">
                <svg class="w-6 h-6 text-primary-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700"><strong>3% vs 25% fees</strong> - keep 22% more per order</span>
              </div>
              <div class="flex items-start p-4 bg-primary-50 rounded-lg">
                <svg class="w-6 h-6 text-primary-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700"><strong>Integrated with POS</strong> - orders flow directly to kitchen</span>
              </div>
              <div class="flex items-start p-4 bg-primary-50 rounded-lg">
                <svg class="w-6 h-6 text-primary-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700"><strong>Your branding</strong> - not competing apps in checkout</span>
              </div>
            </div>
          </div>

          <!-- CTA Section -->
          <div class="mt-6 bg-gradient-to-br from-primary-500 to-primary-600 p-6 md:p-8 rounded-xl text-white text-center">
            <h4 class="text-xl md:text-2xl font-bold mb-2">Ready to Take Control?</h4>
            <p class="mb-4 opacity-90">Get your first-party ordering system set up</p>
            <a href="/schedule" class="inline-block bg-white text-primary-600 px-8 py-3 rounded-full font-semibold hover:shadow-lg transition-all duration-300 hover:scale-105">
              Schedule Free Consultation
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Update commission rate display
  const commissionSlider = document.getElementById('commission-rate') as HTMLInputElement;
  const commissionDisplay = document.getElementById('commission-display');
  
  commissionSlider?.addEventListener('input', function() {
    if (commissionDisplay) {
      commissionDisplay.textContent = this.value + '%';
    }
  });

  // Calculator logic
  document.getElementById('delivery-calculator')?.addEventListener('submit', function(e) {
    e.preventDefault();

    const deliverySales = parseFloat((document.getElementById('delivery-sales') as HTMLInputElement).value);
    const commissionRate = parseFloat(commissionSlider.value);
    const avgOrder = parseFloat((document.getElementById('avg-order') as HTMLInputElement).value);

    // Calculate fees
    const monthlyFees = (deliverySales * commissionRate) / 100;
    const annualFees = monthlyFees * 12;
    
    // Calculate per-order costs
    const thirdPartyCost = (avgOrder * commissionRate) / 100;
    const firstPartyCost = avgOrder * 0.03; // 3% credit card processing
    const savingsPerOrder = thirdPartyCost - firstPartyCost;
    
    // Calculate orders per month
    const ordersPerMonth = deliverySales / avgOrder;
    const annualSavings = savingsPerOrder * ordersPerMonth * 12;

    // Update results
    document.getElementById('monthly-fees')!.textContent = `$${monthlyFees.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
    document.getElementById('annual-fees')!.textContent = `$${annualFees.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
    document.getElementById('third-party-cost')!.textContent = `$${thirdPartyCost.toFixed(2)}/order`;
    document.getElementById('first-party-cost')!.textContent = `$${firstPartyCost.toFixed(2)}/order`;
    document.getElementById('savings-per-order')!.textContent = `$${savingsPerOrder.toFixed(2)}`;
    document.getElementById('annual-savings')!.textContent = `$${annualSavings.toLocaleString('en-US', {maximumFractionDigits: 0})}`;

    // Show results
    const results = document.getElementById('results');
    const benefitsSection = document.getElementById('delivery-benefits-section');
    results?.classList.remove('hidden');
    results?.classList.add('animate-slide-up');
    benefitsSection?.classList.remove('hidden');
    results?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  });
</script>
